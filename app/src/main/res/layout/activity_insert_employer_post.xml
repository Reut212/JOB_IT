<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".insertEmployerPost">


    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jobit3" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/insert_job_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imageLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/profile_icon"
        app:civ_border_color="@color/icon_dark_blue"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/bla"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insert_job_image"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="תפקיד :"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/bla1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bla"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="מיקום :"
        android:textSize="20sp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/bla2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bla1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="תאריך :"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/bla3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bla2"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="שכר :"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/bla4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bla3"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="איש קשר :"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/bla5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bla4"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="מייל :"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/bla6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bla5"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="תיאור :"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/insert_job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bla"
        android:layout_toEndOf="@+id/bla"


        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bla1"
        android:layout_toEndOf="@+id/bla1"
        android:id="@+id/insert_job_place"

        />

    <EditText
        android:id="@+id/insert_job_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bla2"
        android:layout_toEndOf="@+id/bla2"


        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bla3"
        android:layout_toEndOf="@+id/bla3"
        android:id="@+id/insert_job_salary"


        />

    <EditText
        android:id="@+id/insert_job_conName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bla4"
        android:layout_toEndOf="@+id/bla4"

        />

    <EditText
        android:id="@+id/insert_job_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/bla5"
        android:layout_toEndOf="@id/bla5"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/insert_job_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bla5"
        android:layout_alignBaseline="@id/bla6"
        android:layout_toEndOf="@id/bla6"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLines="4" />


    <Button
        android:id="@+id/new_post_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:text="פרסם מודעה"
        android:textSize="20sp"
        android:textStyle="bold"


        />






</RelativeLayout>
