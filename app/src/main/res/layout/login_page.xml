<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context=".logInPage"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/loginButton"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnEmployeeRegister"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold" android:textSize="18sp"
        android:text="עובד"
        android:background="@drawable/round_borded"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/forgotPassword3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="משתמש חדש?"
        android:textColor="@color/icon_dark_blue"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnlogin" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:hapticFeedbackEnabled="false"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:srcCompat="@drawable/jobit3" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_borded"
        android:drawableRight="@drawable/ic_email"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="אימייל"
        android:inputType="text"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/passEditText"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_borded"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:padding="16dp"
        android:inputType="textPassword"
        android:hint="סיסמה"
        android:ems="10"
        android:drawablePadding="16dp"
        android:drawableRight="@drawable/ic_lock"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/btnlogin"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="התחברות"
        android:background="@drawable/rounded_bg"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/forgotPassword"
        app:layout_constraintTop_toBottomOf="@+id/passEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:text="שכחתי סיסמה"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/icon_dark_blue"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnEmployerRegister"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="מעביד"
        android:background="@drawable/round_borded"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp" android:layout_marginStart="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>